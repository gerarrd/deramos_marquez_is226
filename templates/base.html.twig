<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}May Utang Ba Me?{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link href="{{ asset('build/styles/base.css') }}" rel="stylesheet"/>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="is-preload">
        <div class="bg" style="background-image: url({{ asset('build/images/background.png') }})">
            {% block body %}{% endblock %}
        </div>

        {% block modal %}{% endblock %}

        {% block onloadedscripts %}{% endblock %}
    </body>
</html>
