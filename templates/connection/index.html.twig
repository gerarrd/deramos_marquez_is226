{% extends 'base.html.twig' %}

{% block title %}Connection index{% endblock %}

{% block body %}
    <h1>Connection index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for connection in connections %}
            <tr>
                <td>{{ connection.id }}</td>
                <td>{{ connection.amount }}</td>
                <td>{{ connection.status }}</td>
                <td>
                    <a href="{{ path('app_connection_show', {'id': connection.id}) }}">show</a>
                    <a href="{{ path('app_connection_edit', {'id': connection.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_connection_new') }}">Create new</a>
{% endblock %}
