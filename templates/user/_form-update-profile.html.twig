{{ form_start(userForm) }}
    <p class="card-text">
        <div class="form-group">
            {{ form_widget(userForm.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Email' }}) }}
        </div>
        <div class="form-group">
            {{ form_widget(userForm.username, { 'attr': { 'class': 'form-control', 'placeholder': 'Username' }}) }}
        </div>
        <div class="form-group">
            {{ form_widget(userForm.firstname, { 'attr': { 'class': 'form-control', 'placeholder': 'First Name' }}) }}
        </div>
        <div class="form-group">
            {{ form_widget(userForm.lastname, { 'attr': { 'class': 'form-control', 'placeholder': 'Last Name' }}) }}
        </div>
        <div class="form-group">
            {{ form_widget(userForm.nickname, { 'attr': { 'class': 'form-control', 'placeholder': 'Nickname' }}) }}
            <small id="form-help" class="form-text text-danger">{{ form_errors(userForm) }}</small>
        </div>
    </p>
    <button type="submit" class="btn btn-dark btn-lg">{{ button_label|default('Update') }}</button>
{{ form_end(userForm) }}